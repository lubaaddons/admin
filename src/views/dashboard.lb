<!doctype html>

<html>

	<head>

		<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800,300' rel='stylesheet' type='text/css'>

	</head>

	<body>

		<header>

			<nav>

				<ul>

					<li>
						<a href="<< url('/') >>">Home</a>
					</li>

					<foreach $nav as $name => $url>


						<if $name == 'Dashboard'>
						<li class="active">
						<else>
						<li>
						</if>
							<a href="$$url" >$$name</a>
						</li>

					</foreach>

				</ul>

			</nav>

		</header>

		<main>

		<h1>Dashboard</h1>

		<div class="table_container">

			<foreach $tables as $table>

				<php>
				$tableconf = $table['config'];
				$items = $table['items'];
				$tablename = $table['name'];
				</php>

				<table>
				<thead>
					<tr>
						<foreach $tableconf['displayed'] as $name>
							<th>$$name</th>
						</foreach>
						<th><a href="<< url('admin/'.$tablename) >>">View</a>
					<tr>
				</thead>
				<body>
					<foreach $items as $item>
						<tr>

							<foreach $tableconf['displayed'] as $col => $name>
								<td><< $item->$col >></td>
							</foreach>
						</tr>
					</foreach>
				</tbody>

			</table>

			</foreach>

		</div>

		</main>

	</body>

	<style>

	h1 {
		margin-left:5%;
	}
	.add {
		display:block;
		padding-left:5px;
	}
	.edit {
		width:30px;
	}
	.delete {
		width:50px;
	}
	table {
		width:40%;
		border-collapse: collapse;
		float:left;
		margin:0 5%;
	}
	td, th {
		padding:5px;
		text-align: left;
	}
	td {
		border-bottom:1px solid lightgrey;
	}
	th {
		border-bottom: 2px solid grey;
	}
	main a:hover {
		text-decoration: underline;
	}

	</style>

	<style>
	* {
		font-family:'Open Sans';
	}
	body {
		margin:0;
	}
	header {
		background-color:#1f1f14;
		height:35px;
	}
	header:after {
		clear:both;
		display:table;
		content:'';
	}
	main {
		padding:40px;
	}
	ul {
		margin: 0;
		padding-left: 10px;
	}
	li.active {
		background-color:#4e4e32;
	}
	li {
		display:block;
		float:left;
		list-style-type: none;
		height:35px;
	}
	a {
		text-decoration: none;
		color: #008ae6;
	}
	nav a {
		display:block;
		height:100%;
		color:white;
		padding:6px 10px;
	}
	</style>

</html>